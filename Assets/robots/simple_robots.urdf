<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="two_joint_robot_arm">

  <!-- Parameters for the robot -->
  <xacro:property name="base_size" value="0.4"/>
  <xacro:property name="link1_length" value="1.0"/>
  <xacro:property name="link1_radius" value="0.1"/>
  <xacro:property name="link2_length" value="0.8"/>
  <xacro:property name="link2_radius" value="0.08"/>

  <!-- Base Link -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="${base_size} ${base_size} 0.2"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Joint 1 (Fixed to the Ground) -->
  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="100" velocity="1.0"/>
  </joint>

  <!-- Link 1 (First Segment) -->
  <link name="link1">
    <visual>
      <geometry>
        <cylinder length="${link1_length}" radius="${link1_radius}"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Joint 2 (Revolute Joint) -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 ${link1_length / 2}" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="100" velocity="1.0"/>
  </joint>

  <!-- Link 2 (Second Segment) -->
  <link name="link2">
    <visual>
      <geometry>
        <cylinder length="${link2_length}" radius="${link2_radius}"/>
      </geometry>
      <material name="green">
        <color rgba="0.0 1.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <!-- Joint 3 (Fixed Joint for End Effector) -->
  <joint name="joint3" type="fixed">
    <parent link="link2"/>
    <child link="end_effector"/>
    <origin xyz="0 0 ${link2_length / 2}" rpy="0 0 0"/>
  </joint>

  <!-- End Effector -->
  <link name="end_effector">
    <visual>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="yellow">
        <color rgba="1.0 1.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

</robot>
